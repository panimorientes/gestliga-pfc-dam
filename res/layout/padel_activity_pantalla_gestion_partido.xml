<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_pantalla"
    android:baselineAligned="false"
    android:orientation="vertical"
    tools:context=".PantallaGestionPartidoPadel" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.05"
        android:gravity="center_vertical"
        android:background="@drawable/fondo_cabeceras_controles"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="@string/tituloResumenPartido"
            android:textColor="@color/blanco"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginBottom="10dip"
        android:layout_weight="0.95"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fondo_cabeceras"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/fechaPartido"
                android:textColor="@color/negro"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:orientation="horizontal"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="left|center_vertical"
                android:text="@string/fechaPartidoConPuntos"
                android:textColor="@color/negro"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txtFechaPartido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:gravity="left|center_vertical"
                android:textColor="@color/azul"
                android:textSize="25sp" />

            <ImageButton
                android:id="@+id/btnSeleccionarFechaPartido"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:padding="3dip"
                android:src="@drawable/icono_calendario_32" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="left|center_vertical"
                android:layout_marginLeft="20dip"
                android:text="@string/horaPartidoConPuntos"
                android:textColor="@color/negro"
                android:textSize="25sp" />
            
            <Spinner 
                android:id="@+id/spnHoraPartido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:entries="@array/horas"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fondo_cabeceras"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/resultadoPartido"
                android:textColor="@color/negro"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:orientation="horizontal"
            android:paddingLeft="20dip"
            android:paddingRight="20dip" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/txtPartidoJugador1"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.5"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/negro"
                        android:textSize="25sp" />

                    <EditText
                        android:id="@+id/edtset11"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textSize="27sp" />

                    <EditText
                        android:id="@+id/edtset12"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textSize="27sp" />

                    <EditText
                        android:id="@+id/edtset13"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textSize="27sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/txtPartidoJugador2"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.5"
                            android:gravity="left|center_vertical"
                            android:textColor="@color/negro"
                            android:textSize="25sp" />

                        <EditText
                            android:id="@+id/edtset21"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:gravity="center"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:textSize="27sp" />

                        <EditText
                            android:id="@+id/edtset22"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:gravity="center"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:textSize="27sp" />

                        <EditText
                            android:id="@+id/edtset23"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:gravity="center"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:textSize="27sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.5"
                        android:gravity="left|center_vertical"
                        android:text="@string/duracionPartido"
                        android:textColor="@color/negro"
                        android:textSize="25sp" />

                    <EditText
                        android:id="@+id/edtDuracionPartido"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textSize="27sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:layout_gravity="center_horizontal"
        android:textSize="27sp"
        android:text="@string/guardarCambios"
        android:onClick="btnGuardar_Click" />
    </LinearLayout>

</LinearLayout>
