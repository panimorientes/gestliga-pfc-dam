<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dip"
    android:orientation="horizontal" >
    
	<TextView 
	    android:id="@+id/txtJornadaEquipoLocalBC"
	    android:layout_width="0dip"
	    android:layout_height="wrap_content"
	    android:layout_weight="0.35"
	    android:textColor="@color/negro"
	    android:textSize="25sp"
	    android:gravity="left|center_vertical"
	    android:layout_gravity="center_vertical"/>
	
	<TextView 
	    android:id="@+id/txtJornadaEquipoLocalResBC"
	    android:layout_width="0dip"
	    android:layout_height="wrap_content"
	    android:layout_weight="0.1"
	    android:textColor="@color/negro"
	    android:textSize="27sp"
	    android:gravity="center"/>
	
	<TextView 
	    android:id="@+id/txtJornadaEquipoVisitResBC"
	    android:layout_width="0dip"
	    android:layout_height="wrap_content"
	    android:layout_weight="0.1"
	    android:textColor="@color/negro"
	    android:textSize="27sp"
	    android:gravity="center"/>
	
	<TextView 
	    android:id="@+id/txtJornadaEquipoVisitBC"
	    android:layout_width="0dip"
	    android:layout_height="wrap_content"
	    android:layout_weight="0.35"
	    android:textColor="@color/negro"
	    android:textSize="25sp"
	    android:gravity="right|center_vertical"
	    android:layout_gravity="center_vertical"/>
	
	<ImageButton 
	    android:id="@+id/btnJornadaEditarBC"
	    android:layout_width="30dip"
	    android:layout_height="30dip"
	    android:layout_marginLeft="5dip"
	    android:background="@android:color/transparent"
	    android:src="@drawable/img_editar"
	    android:layout_gravity="center_vertical"/>
</LinearLayout>