<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaInicial"
    android:orientation="vertical"
    android:background="@color/fondo_pantalla" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.08"
        android:gravity="right|center_vertical"
        android:background="@color/fondo_cabecera">
        
        <Button 
            android:id="@+id/btnCreditos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dip"
            android:padding="5dip"
            android:textColor="@color/blanco"
            android:background="@color/fondo_botones"
            android:textSize="22sp"
            android:text="@string/creditos"/>
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btnCreditos"
            android:layout_alignParentRight="true"
            android:src="@drawable/logo_pantalla_inicial"
            android:scaleType="fitEnd"/>
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.92"
        android:orientation="vertical">
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical">
            
            <ImageView 
                android:id="@+id/btnGestion"
                android:layout_width="300dip"
                android:layout_height="300dip"
                android:src="@drawable/icono_gestion"
                android:scaleType="fitCenter"
                android:onClick="btnGestion_Click"/>
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:textColor="@color/negro"
                android:typeface="sans"
                android:textSize="30sp"
                android:text="@string/areaGestion"/>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical">
            
            <ImageView 
                android:id="@+id/btnEstadisticas"
                android:layout_width="300dip"
                android:layout_height="300dip"
                android:src="@drawable/icono_estadisticas"
                android:scaleType="fitCenter"
                android:onClick="btnEstadisticas_Click"/>
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:textColor="@color/negro"
                android:typeface="sans"
                android:textSize="30sp"
                android:text="@string/areaEstadisticas"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>